
{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base",

  "compilerOptions": {
    "lib": [
      "es2021"
    ],
    "module": "CommonJS",
    "target": "ES2021",

    "allowJs": true,

    "strict": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "moduleResolution": "node",

    "sourceMap": true,
    "declaration": true
  }
}
